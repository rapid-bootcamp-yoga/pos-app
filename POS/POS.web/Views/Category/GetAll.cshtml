
@model IEnumerable<POS.Repository.CategoriesEntity>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Category Get All</h2>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nama </th>
            <th>Deskripsi</th>
            <th>Simbol</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.Picture</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-outline-primary">Detail</a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Add" asp-controller="Category" class="btn btn-primary">Add</a>
</table>
